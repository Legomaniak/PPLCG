        <Label Content="Utok" Height="28" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,60,0,0" />
        <Label Content="Obrana" Height="28" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,90,0,0" />
        <Label Content="Životy" Height="26" HorizontalAlignment="Stretch" Margin="0,120,0,0" VerticalAlignment="Top" />
