        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="400*" />
        </Grid.ColumnDefinitions>
        <Button Content="Load" Height="23" Name="button1" VerticalAlignment="Top" Click="Load_Click" />
        <Image x:Name="Obrazek" Stretch="Fill" VerticalAlignment="Top" />
        <Button Content="Save" Height="23" Margin="0,29,0,0" Name="button2" VerticalAlignment="Top" Click="Save_Click" />
        <TextBlock Margin="0,58,0,0" Name="textBlock1" Text="TextBlock" />
    </Grid>
</Window>
